{% extends "LayoutBundle::layout.html.twig" %}
{% block main %}		
<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<div class="left-sidebar">
					<h2>Category</h2>
					<div class="panel-group category-products" id="accordian"><!--category-productsr-->
						{% block category %}
							{{ render(controller('ProductBundle:ProductCategory:index')) }}
						{% endblock category %}
						
					</div><!--/category-products-->
				
					<div class="brands_products"><!--brands_products-->
						<h2>Brands</h2>
						<div class="brands-name">
							<ul class="nav nav-pills nav-stacked">
								{% block brands %}
									{{ render(controller('ProductBundle:ProductBrand:index')) }}
								{% endblock brands %}
							</ul>
						</div>
					</div><!--/brands_products-->	
				</div>
			</div>
			
			<div class="col-sm-9 padding-right">
				<div class="features_items"><!--features_items-->
					<h2 class="title text-center">Top Sales</h2>
					{% block topsales %}
						{{ render(controller('ProductBundle:Sales:topsales')) }}
					{% endblock topsales %}

				</div><!--features_items-->

				<div class="features_items"><!--features_items-->
					<h2 class="title text-center">New Comer</h2>
					{% block newcomer %}
						{{ render(controller('ProductBundle:Sales:newcomer')) }}
					{% endblock newcomer%}
					
				</div><!--features_items-->
				
				<div class="category-tab"><!--category-tab-->
					{% block tabpanel %}
					<div class="col-sm-12">
						<ul class="nav nav-tabs">
							<li class="active"><a href="#tshirt" data-toggle="tab">T-Shirt</a></li>
							<li><a href="#blazers" data-toggle="tab">Blazers</a></li>
							<li><a href="#sunglass" data-toggle="tab">Sunglass</a></li>
