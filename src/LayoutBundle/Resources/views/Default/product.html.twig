{% extends "LayoutBundle::layout.html.twig" %}
{% block slider %}
<section id="advertisement">
	<div class="container">
		<img src="{{asset('ecommerce/images/shop/advertisement.jpg')}}" alt="" />
	</div>
</section>
{% endblock %}

{% block main %}		
<section>
	<div class="container">
		<div class="row">
			{% block leftsidebar %}
			<div class="col-sm-3">
				<div class="left-sidebar">
					<h2>Category</h2>
					
					<div class="panel-group category-products" id="accordian">
						{% block category %}
							{{ render(controller('ProductBundle:ProductCategory:index')) }}
						{% endblock category %}
					</div>
						
					<div class="brands_products">
						<h2>Brands</h2>	
						<div class="brands-name">
							<ul class="nav nav-pills nav-stacked">
								{% block brands %}
									{{ render(controller('ProductBundle:ProductBrand:index')) }}
								{% endblock brands %}
							</ul>
						</div>
					</div>
				</div>
			</div>
			{% endblock leftsidebar %}

			{% block konsen %}
			<div class="col-sm-9 padding-right">
				<div class="features_items"><!--features_items-->
					<h2 class="title text-center">Features Items</h2>
					<div class="row">
						{% block product %}
						
						{% endblock product %}
					</div>

					<div class="row">
						{% block pagination %}
						<ul class="pagination">
							<li class="active"><a href="">1</a></li>
							<li><a href="">2</a></li>
							<li><a href="">3</a></li>
							<li><a href="">&raquo;</a></li>
						</ul>
						{% endblock pagination %}
					</div>
				</div><!--features_items-->
			</div>
			{% endblock konsen %}
		</div>
	</div>
</section>
{% endblock main %}