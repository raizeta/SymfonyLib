{% extends "LayoutBundle:Default:product.html.twig" %}
{% block product %}
    {% for entities in entities %}
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src="{{asset('ecommerce/images/shop/'~ entities.p_imageName)}}" alt="" />
                    <h2>Rp {{entities.p_harga|number_format}}</h2>
                    <p>{{entities.p_nama}}</p>
                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>Rp {{entities.p_harga|number_format}}</h2>
                        <p>{{entities.p_nama}}</p>
                        <a href="{{url('cart_create',{'id':entities.p_id})}}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                    </div>
                </div>
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                    <li><a href="{{ path('product_show', { 'id': entities.p_id }) }}"><i class="fa fa-plus-square"></i>Detail Product</a></li>
                </ul>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock product %}

{% block pagination %}
{{ knp_pagination_render(entities) }}
{% endblock pagination %}
